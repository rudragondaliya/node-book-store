  <!-- ============================================================== -->
  <!-- Container fluid  -->
  <!-- ============================================================== -->
  <div class="container-fluid">
    <!-- ============================================================== -->
    <!-- Start Page Content -->
    <!-- ============================================================== -->
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-body">
            <h3 class="card-title">Books Lists</h3>
            <div class="table-responsive">
              <table
                id="zero_config"
                class="table table-striped table-bordered"
              >
                <thead>
                  <tr>
                    <th>#</th>
                    <th>Books Name</th>
                    <th>Price</th>
                    <th>Description</th>
                    <th>Category</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% booksData.forEach((val, idx) => { 
                    const { id, b_name, b_price, desc, category } = val;
                    %>
                  <tr>
                    <td><%= idx + 1 %></td>
                    <td><%= b_name %></td>
                    <td>â‚¹<%= b_price %></td>
                    <td><%= desc  %></td>
                    <td><%= category %></td>
                    <td>
                      <a href="/delete/<%= id%>" class="btn btn-danger me-1"
                        >Delete</a
                      >
                      <a href="/edit/<%= id %>" class="btn btn-warning"
                        >Edit</a
                      >
                    </td>
                  </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
